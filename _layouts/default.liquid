{% assign versionCache = site.time|date: "%Y-%m-%d_%H-%M-%S" %}

<!DOCTYPE html>
<html lang="{{ site.data.globals.appLang }}">
    <head>
        <title>{{ site.name }}</title>
        <meta charset="utf-8">
        <meta http-equiv="cleartype" content="on">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="keywords" content="{{ site.keywords }}">
        <meta name="description" content="{{ site.description }}">
        <meta name="author" content="{{ site.author }}">
        <link rel="author" href="humans.txt">
        <link rel="home" href="{{ site.baseurl }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/favicon.ico?{{ versionCache }}">
        <link rel="apple-touch-icon" href="/favicon.png?{{ versionCache }}">
        <link href="/dist/monolith.css?{{ versionCache }}" media="all" rel="stylesheet">
    </head>

    <body>
        {{ content }}
    </body>
</html>
