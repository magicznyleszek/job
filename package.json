  "scripts": {
    "build": "npm-run-all pdf:build css:copy",
    "serve": "npm-run-all build jekyll:serve",
    "dist:rebuild": "rm -rf dist && mkdir dist",
    "css:copy": "cp src/pdf.css dist/pdf.css",
    "pdf:build": "markdown-pdf src/leszek-pietrzak-cv.md -o dist/leszek-pietrzak-cv.pdf -f A4 -r portrait -b 0mm -s src/pdf.css -m '{\"breaks\": false, \"linkify\": false, \"typographer\": true}'",
    "jekyll:build": "jekyll build",
    "jekyll:serve": "jekyll serve --watch --baseurl ''"
  },
  "devDependencies": {
    "markdown-pdf": "^7.0.0",
    "npm-run-all": "^4.0.1"
  }
