{
  "name": "job",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/smutnyleszek/job.git"
  },
  "author": "Leszek Pietrzak",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/smutnyleszek/job/issues",
    "email": "smutnyleszek@gmail.com"
  },
  "homepage": "https://job.smutnyleszek.com",
  "scripts": {
    "build": "npm-run-all dist:rebuild styles:build pdf:cv pdf:questions",
    "serve": "npm-run-all build jekyll:serve",
    "dist:rebuild": "rm -rf dist && mkdir dist",
    "styles:build": "postcss --config .postcss.config.json",
    "pdf:cv": "markdown-pdf src/leszek-pietrzak-cv.md -o dist/leszek-pietrzak-cv.pdf -f A4 -r portrait -b 1.5cm -s dist/monolith.css -m '{\"breaks\": false, \"linkify\": false, \"typographer\": true}'",
    "pdf:questions": "markdown-pdf src/questions.md -o dist/questions.pdf -f A4 -r portrait -b 1.5cm -s dist/monolith.css -m '{\"breaks\": false, \"linkify\": false, \"typographer\": true}'",
    "jekyll:build": "jekyll build",
    "jekyll:serve": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "styles:build": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "quiet": false
    },
    "pdf:build": {
      "patterns": [
        "src"
      ],
      "extensions": "md",
      "quiet": false
    }
  },
  "devDependencies": {
    "markdown-pdf": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "autoprefixer": "^6.7.7",
    "cssnano": "^3.10.0",
    "npm-watch": "^0.1.8",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0"
  }
}
